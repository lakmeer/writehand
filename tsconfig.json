{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true
  },
  "files": [
    "index.ts"
  ],
  "include": [
    "src/**/*",
    "lib/**/*",
  ],
  "exclude": [
    "node_modules/*",
  ]
}
